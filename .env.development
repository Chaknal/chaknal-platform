# Environment Template
# Copy this to .env.development (local) or .env.production (production)

# Mock Data Control
REACT_APP_USE_MOCK_DATA=true   # Set to 'false' for production
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# Mock Data Logging
REACT_APP_LOG_MOCK_DATA=true
REACT_APP_MOCK_DATA_SUMMARY_INTERVAL=300000

# Production Settings (when deploying)
# REACT_APP_USE_MOCK_DATA=false
# REACT_APP_API_BASE_URL=https://your-production-api.com
# REACT_APP_ENVIRONMENT=production
# REACT_APP_LOG_MOCK_DATA=false
